  "main": "dist/index.js",
  "module": "dist/the-sovereigns-ledger.esm.js",
  "unpkg": "dist/the-sovereigns-ledger.umd.js",
  "jsdelivr": "dist/the-sovereigns-ledger.umd.js",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "start": "node dist/server/index.js",
    "build": "npm-run-all clean \"build:client -- {1}\" \"build:server -- {2}\"",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/server/index.ts --outDir dist/server",
    "preview": "vite preview --port 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "lint": "eslint \"{src,server,tests}/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"{src,server,tests}/**/*.{js,jsx,ts,tsx}\" --fix",
    "format": "prettier --write \"{src,server,tests}/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"{src,server,tests}/**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage build .eslintcache",
    "deploy": "NODE_ENV=production npm run build && pm2 start dist/server/index.js --name 'sovereign-ledger-api'",
    "predeploy": "npm run clean && npm run test && npm run lint && npm run typecheck",
    "docs": "typedoc --options typedoc.json",
    "docs:build": "npm run docs && open-cli docs/index.html",
    "analyze": "cross-env ANALYZE=true vite build",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "changelog": "standard-version --dry-run",
    "security:check": "npm audit --audit-level critical",
    "db:migrate": "prisma migrate dev --name init",
    "db:generate": "prisma generate",
    "db:seed": "ts-node prisma/seed.ts"
  },
