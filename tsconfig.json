{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "cobol",
    "api",
    "articles",
    "blueprints",
    "contracts",
    "docs",
    "domains",
    "fabrication",
    "genesis_expedition_details",
    "implementation",
    "introspection",
    "inventions",
    "linkedinArticles",
    "marketing",
    "mermaid",
    "prototypes",
    "screenplay",
    "seasons",
    "storybooks",
    "The Laws",
    "The Philosophy",
    ".github",
    "github"
  ]
}
